    <button class="btn btn-sm btn-outline-primary" id="show-reply-dialog-button" data-id="{{ id }}">RÃ©pondre</button>

    {% if isCommentAuthor %}
        <button class="btn btn-sm btn-outline-danger ms-2 float-end" id="delete-comment-button" data-id="{{ id }}">Supprimer</button>
        <button class="btn btn-sm btn-outline-info float-end" id="edit-comment-button" data-action="showEditArea" data-id="{{ id }}">Modifier</button>
